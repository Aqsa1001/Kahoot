<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".addActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#D8D6D6"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/backArrow"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow"
                android:backgroundTint="@color/mypurple">

            </ImageView>

            <TextView
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/mypurple"
                android:textAlignment="center"
                android:text="Add Questions" />

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#D8D6D6"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Question No:"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/questionNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g Q1"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:textAlignment="center"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Question:"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g What is Science?"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:textAlignment="center"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Question Marks:"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/questionMarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g 03"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Option#1:"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g Bla Bla"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Option#2:"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g Bla Bla"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:textAlignment="center"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Option#3:"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g Bla"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Option#4:"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g ye"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="-10dp"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Correct Option:"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <EditText
                android:id="@+id/correctOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Optione.g Bla Bla"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:textAlignment="center"
                android:backgroundTint="@color/black"
                android:textCursorDrawable="@color/black"
                android:ems="15"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/addButton"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mypurple"
                android:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>