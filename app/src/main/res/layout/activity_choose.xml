<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".chooseActivity">

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="371dp"
     android:layout_alignParentEnd="true"
     android:layout_marginTop="-50dp"
     android:layout_marginEnd="0dp"
     android:rotationX="132"
     android:rotationY="-203"
     android:src="@drawable/image">

 </ImageView>

 <ImageView
     android:layout_width="256dp"
     android:layout_height="160dp"
     android:layout_marginLeft="40dp"
     android:src="@drawable/te_removebg_preview">

 </ImageView>

 <ImageView
     android:layout_width="241dp"
     android:layout_height="142dp"
     android:layout_marginTop="20dp"
     android:layout_marginLeft="-40dp"
     android:src="@drawable/std_removebg_preview">
 </ImageView>

 <Button
     android:layout_width="250dp"
     android:layout_height="60dp"
     android:id="@+id/teacherBtn"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="450dp"
     android:text="TEACHER"
     android:textColor="@color/white"
     android:textStyle="bold"
     android:backgroundTint="@color/mypurple">

 </Button>

 <Button
     android:layout_width="250dp"
     android:layout_height="60dp"
     android:id="@+id/stdbtn"
     android:layout_marginTop="520dp"
     android:layout_centerHorizontal="true"
     android:text="STUDENT"
     android:textColor="@color/white"
     android:textStyle="bold"
     android:backgroundTint="@color/mypurple">


 </Button>

</RelativeLayout>
